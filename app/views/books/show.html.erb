<%= render 'share/sidebar', user: current_user %>
<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table">
  	<tbody>
  	  <tr>

        <td>
          <%= link_to @book.user do %>
            <%= attachment_image_tag @user, :image, format: 'jpeg', size: "40x40", fallback: "no_image.png" %><br>
            <%= @book.user.name %></td>
          <% end %>
        <td><%= link_to @book.title, book_path(@book.id) %></td>
        <td><%= @book.body %></td>
        <% if @book.user.id == current_user.id %>
        <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success edit_book_29913" %></td>
        <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn btn-sm btn-danger destroy_book_29913" %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>
