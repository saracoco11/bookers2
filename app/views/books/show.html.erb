<div class="container px-5 px-sm-0">
  <%= render 'share/sidebar', user: @user, book: @new_books %>
  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
    	<tbody>
    	  <tr>
          <td>
            <%= link_to @book.user do %>
              <%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "40x40", fallback: "no_image.png" %><br>
              <%= @book.user.name %></td>
            <% end %>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <td>
            <% if Favorite.find_by(user_id: current_user.id, book_id: @book.id) %>
              <%=link_to @book.favorites.count, book_favorites_path(book_id: @book.id), method: :delete, class: "fas fa-heart unfavorite-btn", :style=>"color:red;" %>
            <% else %>
              <%= link_to @book.favorites.count, book_favorites_path(book_id: @book.id), method: :post, class: "fas fa-heart favorite-btn" %>
            <% end %>
          </td>
          <% if @user == current_user %>
            <td>
              <%= link_to "Edit", edit_book_path(@book), class:"btn btn-sm btn-success"  %>
              <%= link_to "Destroy", book_path(@book), method: :delete, class:"btn btn-sm btn-success", "data-confirm":"本当に削除しますか？"  %>
            </td>
          <% end %>

          <td>コメント数: <%= @book_comments.count %></td>
        </tr>
      </tbody>
    <table>
      <tbody>
        <% @book_comments.each do |book_comment| %>
          <tr>
            <td>
              <%= link_to @book.user do %>
                <%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "40x40", fallback: "no_image.png" %><br>
                <%= book_comment.user.name %></td>
              <% end %>
            </td>
            <td><%= book_comment.comment %></td>
            <% if book_comment.user == current_user %>
              <td><%= link_to "Destroy", book_book_comment_path(book_id: @book.id, id: book_comment.id), method: :delete, class: "btn btn-sm btn-danger destroy_book_29913" %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= form_with model:[@book,@comment], local:true do |f| %>
      <div class="form-group">
        <%= f.text_area :comment %>
      </div>
      <div class="form-group">
        <%= f.submit "送信" %>
      </div>
    <% end %>
  </div>
</div>
