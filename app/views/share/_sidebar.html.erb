<div class="row">
  <div class="col-md-3">
    <table class="table">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :image, format: 'jpeg', size: "63x63", fallback: "no_image.png" %>
      <tbody>
        <tr></tr>
      　<tr>
    	  　<th>name</th>
    	  　<th><%= user.name %></th>
      　</tr>
      　<tr>
    	  　<th>introduction</th>
    	  　<th><%= user.introduction %></th>
      　</tr>
      </tbody>
    </table>
    <div class="row">
      <%= link_to "aa", edit_user_path(user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_37799" %>
    </div>
      <h2 class="mt-3">New book</h2>
        <%= form_with model: @book, local:true do |f| %>
          <div class="form-group">
            <label for="book_title">Title</label>
            <input class="form-control book_title" type="text" name="book[title]" id="book_title">
          </div>
          <div class="form-group">
            <label for="book_opinion">Opinion</label>
            <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
          </div>
          <div class="form-group">
            <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book" href="/books/:id">
          </div>
        <% end %>
    </div>

